rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Categories collection - allow all reads and writes for development
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Subcategories collection - allow all reads and writes for development
    match /subcategories/{subcategoryId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Filters feed collection - allow all reads and writes for development
    match /filters_feed/{filterId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Onboarding sliders collection - allow all reads and writes for development
    match /onboarding_sliders/{sliderId} {
      allow read: if true;
      allow write: if true;
    }
  }
}



